<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:gravity="center|center_horizontal"
    android:orientation="horizontal"
    android:padding="4dp"
    android:translationY="-2dp">

    <!-- 1. Stablo budućnosti -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:background="@color/stablo_buducnosti"
            android:backgroundTint="@color/stablo_buducnosti" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="St. budućnosti"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 2. Konkurent -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:background="@color/konkurent"
            android:backgroundTint="@color/konkurent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konkurent"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:background="@color/indiferentno"
            android:backgroundTint="@color/indiferentno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indiferentno"
            android:textSize="12sp" />
    </LinearLayout>


    <!-- 4. Lošeg kvaliteta -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:background="@color/loseg_kvaliteta"
            android:backgroundTint="@color/loseg_kvaliteta" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lošeg kvaliteta"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:background="@color/zrelo_stablo"
            android:backgroundTint="@color/zrelo_stablo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zrelo za seču"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/hideLegendButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/baseline_keyboard_arrow_down_24" />

</LinearLayout>
